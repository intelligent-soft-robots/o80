#! /usr/bin/env python

from pyplot import runtime
import math,copy,threading,time
import o80_example as robot
import sys,math

    
def get_value(iteration):
    if iteration<500:
        v = 1000*math.tanh(0.005*float(iteration))
    else :
        v = 1000*math.tanh(-0.005*float(iteration)+5)
    return int(v+0.5)

def up_down_motion(id):

    for iteration in range(1000):
        robot.add_direct_command(id,
                                 0,
                                 get_value(iteration),
                                 robot.Mode.QUEUE)


    robot.pulse(id)

up_down_motion(int(sys.argv[1]))
